<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="HideShowNumpad"
       t-inherit="point_of_sale.ProductScreen"
       t-inherit-mode="extension"
       owl="1">

        <xpath expr="//div[@class='pads']" position="before">
                <div style="border-top: solid 2px rgb(110,200,155);text-align: center;" t-on-click="toogleNumpad">
                    <i class="numpad-toggle fa fa-caret-down fa-2x"
                    style="cursor: pointer; transform: scale(2,1); color: rgb(110,200,155);">
                    </i>
                </div>
        </xpath>
    </t>
</templates>